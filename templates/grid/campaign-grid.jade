.xepan-grid.main-box.clearfix(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                div(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .row
        {header}{cols}{col}{/}{/}{/}
        {rows}{row}
        div(class="{$odd_even} col-md-{col-width}4{/}" data-id="{$id}")
            {cols}
            .main-box.clearfix.project-box(class="{$box}")
              .ribbon-wrapper-green(style= "cursor:pointer; cursor: hand; max-width:600px;")
                .ribbon-green 
                  span.small.text-muted.campaign-visit-detail(data-id="{$id}" style="color:white;"){$defect} {$dummy_spot}
              .main-box-body.clearfix
                .project-box-header(class="{$bg}")
                  .name
                    a(href='{$url}')
                      {$title}
                .project-box-content
                  span.chart(data-percent="{completed_percentage}0{/}")
                    span.percent
                    | % 
                    br
                    span.lbl completed
                .project-box-footer.clearfix
                  a(href='#') 
                    strong.text-success   Sent
                    .row    
                      span.text-success   {$total_combined_postings_done}   
                  a(href='#') 
                    strong.text-success   Schedule Left  
                    .row
                      span.text-success   {$schedule_left} 
                  a(href='#') 
                    strong.text-success   Days Left   
                    .row
                      span.text-success   {$remaining_duration}   
                .project-box-ultrafooter.clearfix
                  .col-md-4
                    {$action}
                  .col-md-4
                  .col-md-4  
                    {$edit}
                    {$delete}

        {/}
        {/}{/}
        {not_found}
        div.row
            .col-md-12.text-center.alert.alert-warning(role="alert")
                span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
        {/}

        {totals}{cols}{col}{$content}{/}{/}{/}
    {$Paginator}

script.
  $('.chart').easyPieChart({
  easing: 'Linear',
  onStep: function(from, to, percent) {
    console.log(percent);
    $(this.el).find('.percent').text(Math.round(percent));
  },
  barColor: '#3498db',
  trackColor: '#f2f2f2',
  scaleColor: false,
  lineWidth: 8,
  size: 130,
  animate: 1500
  });

