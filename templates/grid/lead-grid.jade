.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    //- .atk-box-small(class="{$pannel_class}") 
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .btnn.btn-primaryy.pull-right{$grid_buttons} 
                //- i(class="fa fa-plus-circle fa-lg")
            .form-group(style="width:50%;margin:auto")
                .pull-right
                    span(class="form-control pull-left")|{$quick_search}
                        i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                tr
                    {cols}
                    th
                      span Name
                    th
                      span Communication
                    th
                      span Category
                    th
                      span opportunities
                    th  
                    {/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td
                      img(alt='', src='{image}img/samples/scarlet-159.png{/}')
                      a.user-link(href='{url}index.php?page=xepan_hr_employeedetail&contact_id={$id}{/}') {first_name}Scarlett{/} {last_name}Johansson{/}
                      span.user-subhead {source}Admin{/}
                    td
                      | {communication}{/}
                    td
                      | {category}{/}
                    td
                      | {opportunities}{/}
                    td(style="width: 15%;")
                        {$edit}
                        {$delete}
                        {/}
                {/}{/}
                {not_found}
                tr
                    td.atk-padding-large.atk-align-center
                        span.atk-label.atk-effect-warning
                            span.icon-attention &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
