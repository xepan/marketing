.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th(id="{$title_sortid}")
                    span Title
                    span(style= "cursor:pointer; cursor: hand; max-width:600px;"){$title_sort}
                th
                    span Communication    
                th
                    span Description    
                th
                    span Duration 
                th  
                               
                th 
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td
                      {avatar}
                      img(alt='', src='{image}img/samples/scarlet-159.png{/}')
                      {/}
                      {title}{/}
                      .row 
                          a(href='{url}index.php?page=xepan_marketing_leaddetails&contact_id={$lead_id}{/}') 
                            span.user-subhead{lead}Lead{/}
                    td
                      span.sparkline(sparkType="bar" sparkHeight="40px" sparkbarColor="lightgray")
                        {communication}40,10,30,30,10,5,20,40,10,30,30{/}    
                    td
                        span.small {$description}    
                    td
                        | {duration}Duration{/}

                    td  
                        | {$action}

                    td(style="width: 15%;")
                        {$edit}
                        {$delete}
                    
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
