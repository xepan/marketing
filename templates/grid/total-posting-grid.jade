.main-box.clearfix(id="{$_name}" class="{$class}")
    .main-box-body.clearfix.row.col-md-12
        {header}{cols}{col}{/}{/}{/}
        header.main-box-header.clearfix
          .main-box.small-graph-box(class="{response}green-bg{/}")
            span.value {$post_title}
            span.subinfo
              {$post_content}
            span.subinfo
              |URL : {$post_url}
          .btn.btn-success.btn-sm.btn-block.update-activity-button(title="Fetch Comments, likes and shares") Update Activities          
        {rows}{row}
        div(class="{$odd_even}" data-id="{$id}")
        {cols}    
        .main-box
          .clearfix
            .infographic-box.merged.merged-top.pull-left
              span.value.green {$user}
              span.headline {$social_app}
              span.value.green Posted On
              span.headline {$posted_on}
            .infographic-box.merged.merged-top.merged-right.pull-left  
              span.headline.green  Likes : {$likes}
              span.headline.green  Shares : {$share}
              span.headline.green.post-comments(href='#',data-id="{$id}" style="cursor:pointer; cursor: hand;")  Comments : {$total_comments}
              span.headline.green  Post Type : {$post_type}
              span.headline.green  Monitoring : {$monitoring}
              span.headline.green  Force Monitor : {$forcemonitoring}
              {$action}      
        {/}
        {/}{/}
        {not_found}
        
        div.row
            .col-md-12.text-center.alert.alert-warning(role="alert")
                span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
        {/}

        {totals}{cols}{col}{$content}{/}{/}{/}
    {$Paginator}

style(type='text/css', media='screen').
  .conversation-wrapper .conversation-body {
  background-color: #ffffff !important;
  margin-left: 0px !important;
  padding: 0px 0px 0px 0px !important;
  }    