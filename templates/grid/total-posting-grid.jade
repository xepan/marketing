.main-box.clearfix(id="{$_name}" class="{$class}")
    .main-box-body.clearfix.row.col-md-6
        {header}{cols}{col}{/}{/}{/}
        header.main-box-header.clearfix
          h1 Posts
        {rows}{row}
        div(class="{$odd_even}" data-id="{$id}")
        {cols}    
        .conversation-wrapper.panel.panel-default
          .conversation-content
            .slimScrollDiv(style='')
              .conversation-inner(style='')
                .conversation-item.item-left.clearfix
                  .conversation-body
                    .name
                      a.user-link.do-view-employee(href='#',data-id="{$id}") {$user}
                    .time.hidden-xs
                      | {$posted_on}
                    .text
                      |Likes Comments Shares
        {/}
        {/}{/}
        {not_found}
        
        div.row
            .col-md-12.text-center.alert.alert-warning(role="alert")
                span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
        {/}

        {totals}{cols}{col}{$content}{/}{/}{/}
    {$Paginator}                    

style(type='text/css', media='screen').
  .conversation-wrapper .conversation-body {
  background-color: #ffffff !important;
  margin-left: 0px !important;
  padding: 0px 0px 0px 0px !important;
  }    