.email-detail-nano-content(tabindex='0', style='right: -13px;')
  #email-detail-inner
    {$Content}
    #email-detail-subject.clearfix
      span.subject Subject: {$title}
      span.label.label-success {$status}
    #email-detail-sender.clearfix
      .picture.hidden-xs
        img(alt='', src='img/samples/angelina-300.jpg')
      .users
        .from.clearfix
          .name
            | {created_by}
          .email.hidden-xs
            | <angelina@jolie.com>
      .tools
        .date
          | {created_at}
        .btns
          .btn-group
            button.btn.btn-success(type='button')
              i.fa.fa-mail-reply
            button.btn.btn-success.dropdown-toggle(type='button', data-toggle='dropdown')
              span.caret
            ul.dropdown-menu
              li
                a(href='#')
                  i.fa.fa-mail-reply
                  |  Reply
              li
                a(href='#')
                  i.fa.fa-mail-reply-all
                  |  Reply all
              li
                a(href='#')
                  i.fa.fa-mail-forward
                  |  Forward
              li
                a(href='#')
                  i.fa.fa-print
                  |  Print
    #email-body
      //- {$Content}
      {$long_content}