.email-detail-nano-content(tabindex='0', style='right: -13px;')
  #email-detail-inner
    #email-detail-subject.clearfix
      .col-md-1
        span.subject Subject: 
      .col-md-4
        span.subject.text-muted {$title}
      .col-md-7  
        span.pull-right Category: {$marketing_category}{$marketing_category_id}
    #email-detail-sender.clearfix
      .picture.hidden-xs 
        {$avatar} 
      .users
        .from.clearfix
          .name
            | {$created_by}
      .tools
        .date
          | {$created_at}
        .btns
          .btn-group 
               {$action}    
    #email-body
      {$message_blog}