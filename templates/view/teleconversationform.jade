.panel.panel-default
	.panel-body
		.row.xepan.push-small
			h1.text-center {$name}
			.btn-group.pull-right
				button.positive-lead.btn.btn-primary.btn-xs(data-id="{$id}" data-placement='bottom', data-toggle='tooltip', title='', type='button', data-original-title='Positive Lead')
					i.fa.fa-plus-circle
				button.negative-lead.btn.btn-primary.btn-xs(data-placement='bottom', data-toggle='tooltip', title='', type='button', data-original-title='Negative Lead')
					i.fa.fa-minus-circle 
			hr
		.row 	
			.col-md-12
				{$title}
			.col-md-6
				{$from_number}
			.col-md-6
				{$to_number}
			.col-md-12		
				.row.xepan-push-small
				{$description}	
			.col-md-3
				.row.xepan-push-small
				{$FormButtons}
			.col-md-3		
				.row.xepan-push-small
				{$btn-opportunity}
			.col-md-3		
			.col-md-3		
